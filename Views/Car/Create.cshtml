@model FirstWebApp.ViewModels.CarCreateViewModel



@using (Html.BeginForm("CreatePost", "Car", FormMethod.Post))
{
    @Html.ValidationSummary(true);

    <br />
    <br />

    <br />

    <div class="row">
        <div class="form-group, col-lg-4">
            <label for="exampleInputPassword1">Model</label>
            @Html.EditorFor(m => m.New.Brand, new { htmlAttributes = new { @class = "form-control", @placeholder = "Modelo" } })
        </div>


        <div class="form-group, col-lg-4">
            <label for="exampleInputPassword2">Color</label>
            @Html.EditorFor(m => m.New.Color, new { htmlAttributes = new { @class = "form-control", @placeholder = "Color" } })
        </div>

        <div class="form-group, col-lg-4">
            <label for="exampleInputPassword2">Branch</label>
            @Html.DropDownListFor(model => model.New.BranchId, Model.AvailableBranches.Select(option => new SelectListItem
            {
                Text = Html.DisplayTextFor(_ => option.Name).ToString(),
                Value = option.Id.ToString(),
                Selected = false
            }), "Branch", new { @class = "form-control", @id = "franchiseList" })

        </div>


    </div>


    <br />
    <br />
    <br />
    <br />
    <br />

    <hr />

    <div style="text-align:center;">
        <button type="submit" value="Submit" class="btn btn-primary">Submit</button>
    </div>











}