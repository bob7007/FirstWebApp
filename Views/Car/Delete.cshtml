@model FirstWebApp.ViewModels.CarCreateViewModel



@using (Html.BeginForm("DeletePost", "Car", FormMethod.Post))
{
    @Html.ValidationSummary(true);

    <br />
    <br />
    <br />

    


    <div class="row">
        <div class="form-group, col-lg-4">
            <label for="exampleInputPassword1">Model</label>
            @Html.HiddenFor(m => m.New.Id)
            @Html.DisplayFor(m => m.New.Brand, new { htmlAttributes = new { @class = "form-control"} })
        </div>


        <div class="form-group, col-lg-4">
            <label for="exampleInputPassword2">Color</label>
            @Html.DisplayFor(m => m.New.Color, new { htmlAttributes = new { @class = "form-control"} })
        </div>

        <div class="form-group, col-lg-4">
            <label for="exampleInputPassword2">Branch</label>
            @Html.DisplayFor(m => m.New.Branch.Name, new { htmlAttributes = new { @class = "form-control" } })
        </div>


    </div>


    <br />
    <br />
    <br />
    <br />
    <br />

    <hr />

    <div style="text-align:center;">
        <button type="submit" value="Submit" class="btn btn-primary">Submit</button>
    </div>











}
